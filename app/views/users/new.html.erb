<h1 class="text-center text-white">Create a New User</h1>
<%= form_for(@user) do |f| %>

<div class="container form-container  w-50 bg-white p-5 ">
    <%= render  "shared/errors", obj: @user %>
    <div class="form-group">
        <%= f.label :username  %>
        <%= f.text_field :username,class: "form-control",:aria=>{:describedby=> "usernameHelp"}, :placeholder=> "What's your username?" %>
        <small id="usernameHelp" class="form-text text-muted">username must be unique and between (5-15) characters.</small>
    </div>
    <div class="text-center">
        <%= f.submit "Create" , class: "btn btn-lg btn-info" %> or <%= link_to  "login", login_path %>
    </div>
    <% end %>
</div>