<%= render  "shared/notice"%>
<%= form_with scope: :session, url: login_path , local: true do |f| %>
<div class="container form-container  w-50 bg-white p-5 ">

    <h1 class="text-center  mb-4 "> Login </h1>
    <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, class: "form-control", :placeholder=> "Enter your username." %>
    </div>

    <div class="text-center">
        <%= f.submit "Login" , class: "btn btn-lg btn-info" %>
    </div>
    <% end %>
</div>