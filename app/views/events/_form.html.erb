<%= form_with(model: event, local: true) do |f| %>
<div class="container form-container  w-50 bg-white p-5 ">
    <%= render  "shared/notice", obj: event %>
    <div class="form-group">
        <%= f.label :name  %>
        <%= f.text_field :name,class: "form-control",:aria=>{:describedby=> "nameHelp"}, :placeholder=> "please enter the event name" %>
        <small id="nameHelp" class="form-text text-muted">Name must be unique and between (5-15) characters.</small>
    </div>
    <div class="form-group">
        <%= f.label :event_date %>
        <%= f.date_field :event_date, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: "form-control", :placeholder=> "Enter event description." %>
    </div>
    <div class="text-center">
        <%= f.submit "Create" , class: "btn btn-lg btn-info" if type == "create" %>
        <%= f.submit "Create" , class: "btn btn-lg btn-info" if type == "edit" %>
    </div>
    <% end %>
</div>